{

    "openapi": "3.0.1",

    "servers": [

      {
        "description": "API para cadastro informações de comunicação nos produtos TOTVS",    
        "url": "api.totvs.com.br"
      }

    ],

    "info": {
        "description": "API para cadastro informações de comunicação para uso dos produtos TOTVS",
        "version":"1.000",
        "title":"CommunicationInformation",
        "contact":{
            "name":"T-Talk",
            "url": "api.totvs.com.br",
            "email":"comiteintegracao@totvs.com.br"
        }
    },
    "paths":{
    },
    "components":{
        "parameters":{
            "Authorization":{
                "name":"authorization",
                "in":"header",
                "required":true,
                "description":"Cabeçalho usado para autorização das requisições",
                "schema":{
                    "type": "string"
                }
            },
            "Order":{
                "name":"order",
                "in":"query",
                "description":"Ordenação da coleção",
                "required":false,
                "schema":{
                    "type":"array",
                    "items":{
                        "type":"string"
                    },
                    "uniqueItems":true
                }
            }
        },
        "schemas":{
            "PagedCommunicationInformation":{
                "type":"object",
                "allOf":[
                    {
                        "$ref":"#/components/schemas/CommunicationInformation"
                    }
                ]
            },
            "CommunicationInformation":{
				"type":"object",
				"properties":{
					"items":{
						"type":"array",
						"items":{
							"$ref":"#/components/schemas/CommunicationInformationInfo"
						}
					}
				} 
            },
			"CommunicationInformationInfo":{
				"type": "object",
				"description": "Documentos Governamentais",
				"properties":{ 
					"type":{
						"type": "string",
						"description": "Tipo do Telefone"
					},
					"phoneNumber":{
						"type": "string",
						"example": "3333-5555",
						"description": "Telefone",
						"x-totvs":{
							"protheus":{
								"field": "SA1.A1_TEL / SA2.A2_TEL",
								"required": false,
								"type": "char",
								"length": "50",
								"avialable": true,
								"canUpdate": true,
								"note": "SA1.A1_TEL tamanho 15 SA2.A2_TEL tamanho 50"
							}
						}
					},
					"phoneExtension":{
						"type": "string",
						"description": "Ramal"
					},
					"faxNumber":{
						"type": "string",
						"description": "Fax",
						"x-totvs":{
							"protheus":{
								"field": "SA1.A1_FAX / SA2.A2_FAX",
								"required": false,
								"type": "char",
								"length": "15",
								"avialable": true,
								"canUpdate": true
							}
						}
					},
					"faxNumberExtension":{
						"type": "string",
						"description": "Ramal do Fax"
					},
					"homePage":{
						"type": "string",
						"description": "Página Web",
						"x-totvs":{
							"protheus":{
								"field": "SA1.A1_HPAGE / SA2.A2_HPAGE",
								"required": false,
								"type": "char",
								"length": "30",
								"avialable": true,
								"canUpdate": true
							}
						}
					},
					"email":{
						"type": "string",
						"description": "Email para contato",
						"x-totvs":{
							"protheus":{
								"field": "SA1.A1_EMAIL / SA2.A2_EMAIL",
								"required": false,
								"type": "char",
								"length": "30",
								"avialable": true,
								"canUpdate": true
							}
						}
					},
					"diallingCode":{
						"type": "string",
						"description": "DDD",
						"x-totvs":{
							"protheus":{
								"field": "SA1.A1_DDD / SA2.A2_DDD",
								"required": false,
								"type": "char",
								"length": "03",
								"avialable": true,
								"canUpdate": true
							}
						}
					},
					"internationalDiallingCode":{
						"type": "string",
						"description": "DDI",
						"x-totvs":{
							"protheus":{
								"field": "SA1.A1_DDI / SA2.A2_DDI",
								"required": false,
								"type": "char",
								"length": "06",
								"avialable": true,
								"canUpdate": true
							}
						}
					}
				}	
			}
        }
    }
}