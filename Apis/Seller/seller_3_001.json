{

    "openapi": "3.0.1",

    "servers": [

      {
        "description": "API para a entidade Vendedor (seller) para produtos TOTVS",    
        "url": "api.totvs.com.br"
      }

    ],

    "info": {
        "description": "API para a entidade Vendedor (seller) para produtos TOTVS",
        "version":"2.004",
        "title":"Seller",
        "contact":{
            "name":"T-Talk",
            "url": "api.totvs.com.br",
            "email":"comiteintegracao@totvs.com.br"
        },
        "x-totvs": {
            "messageDocumentation":{
                "name":"Seller",
                "description":"API para a entidade Vendedor (seller) para produtos TOTVS",
                "segment":"Services"
            },
            "produtcInformation":{
              "protheus":{
                  "contact":"squad.crm@totvs.com.br",
                  "description":"Cadastro de Vendedores",
                  "adapter":"mats040.prw"
              }  
            }
        }
    },
    "paths":{
        "/seller":{
            "get":{
                "tags":[
                    "Seller"
                ],
                "summary":"Retorna lista de Vendedores",
                "x-totvs":{
                    "produtcInformation":{
                        "protheus":{
                            "avaliable":true,
                            "note":"Este verbo está disponível com todos os parâmetros",
                            "minimalVersion":"12.1.21"
                        }  
                    }
                },
                "description":"Retorna lista completa de vendedores",
                "operationId":"getseller",
                "parameters":[
                    {
                        "$ref": "#/components/parameters/Authorization"
                    },
                    {
                        "$ref": "#/components/parameters/Order"
                    },
                    {
                        "$ref": "#/components/parameters/Page"
                    },
                    {
                        "$ref": "#/components/parameters/PageSize"
                    }
                ],
                "responses":{
                    "200":{
                        "description":"Operação realizada com sucesso!",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/PagedSellers"
                                }
                            }
                        }
                    }
                },
                "security":[
                    {
                        "api_key":[]
                    }
                ]
            },
            "post":{
                "tags":[
                    "Seller"
                ],
                "summary":"Inclui um vendedor",
                "description":"Inclui um vendedor conforme dados enviados na requisição.",
                "operationId":"postsellerId",
                "parameters":[
                    {
                        "$ref": "#/components/parameters/Authorization"
                    }
                ],
                "requestBody":{
                    "description":"Vendedor a ser incluído.",
                    "content":{ 
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/SellerInfo"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Operação realizada com sucesso!",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/PagedSellers"
                                }
                            }
                        }
                    },
                    "400":{
                        "description":"Erro durante inclusão do vendedor!",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/ErrorDetails"
                                }
                            }
                        }
                    }
                },
                "security":[
                    {
                        "api_key":[]
                    }
                ]
            }    
        },
        "/seller/{sellerId}":{
            "get":{
                "tags":[
                 "Seller"   
                ],
                "summary":"Retorna vendedor pelo seu Código",
                "operationId":"getsellerId",
                "x-totvs":{
                    "produtcInformation":{
                        "protheus":{
                            "avaliable":true,
                            "note":"Este verbo está disponível com os parâmetros Authorization e SellerId.",
                            "minimalVersion":"12.1.21"
                        }  
                    }
                },
                "parameters":[
                    {
                        "$ref": "#/components/parameters/Authorization"
                    },
                    {
                        "$ref": "#/components/parameters/SellerId"
                    }
                ],
                "responses":{
                    "200":{
                        "description":"Operação realizada com sucesso!",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/PagedSellers"
                                }
                            }
                        }
                    },
                    "400":{
                        "description":"Vendedor não localizado na base!",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/ErrorDetails"
                                }
                            }
                        }
                    }      
                },
                "security":[
                    {
                        "api_key":[]
                    }
                ]
            },
            "put":{
                "tags":[
                    "Seller"
                ],
                "summary":"Altera um vendedor",
                "description":"Atualiza cadastro de vendedor conforme dados enviados na requisição",
                "operationId":"putsellerId",
                "parameters":[
                    {
                        "$ref": "#/components/parameters/Authorization"
                    },
                    {
                        "$ref": "#/components/parameters/SellerId"
                    }
                ],
                "requestBody":{
                    "description":"Vendedor a ser atualizado.",
                    "content":{ 
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/SellerInfo"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Operação realizada com sucesso!",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/PagedSellers"
                                }
                            }
                        }
                    },
                    "400":{
                        "description":"Erro durante a alteração do vendedor!",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/ErrorDetails"
                                }
                            }
                        }
                    }
                },
                "security":[
                    {
                        "api_key":[]
                    }
                ]   
            },
            "delete":{
                "tags":[
                    "Seller"
                ],
                "summary":"Exclui um vendedor",
                "description":"Exclui cadastro de vendedor conforme dados enviados na requisição.",
                "operationId":"deletesellerId",
                "parameters":[
                    {
                        "$ref": "#/components/parameters/Authorization"
                    },
                    {
                        "$ref": "#/components/parameters/SellerId"
                    }
                ],
                "responses":{
                    "200":{
                        "description":"Operação realizada com sucesso!",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/PagedSellers"
                                }
                            }
                        }
                    },
                    "400":{
                        "description":"Erro durante a exclusão do vendedor!",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/ErrorDetails"
                                }
                            }
                        }
                    }
                },
                "security":[
                    {
                        "api_key":[]
                    }
                ]   
            }
        }
    },
    "components":{
        "parameters":{
            "SellerId":{
                "name":"sellerId",
                "in":"path",
                "required":true,
                "description":"Identificador único do vendedor",
                "schema":{
                    "type": "string"
                }   
            },
            "Authorization":{
                "name":"authorization",
                "in":"header",
                "required":true,
                "description":"Cabeçalho usado para autorização das requisições",
                "schema":{
                    "type": "string"
                }
            },
            "Order":{
                "name":"order",
                "in":"query",
                "description":"Ordenação da coleção",
                "required":false,
                "schema":{
                    "type":"array",
                    "items":{
                        "type":"string"
                    },
                    "uniqueItems":true
                }
            },
            "Page":{
                "name":"page",
                "in":"query",
                "description":"Paginação da coleção",
                "required":false,
                "schema":{
                    "type":"integer",
                    "format":"int32",
                    "default":1,
                    "minimum":1,
                    "exclusiveMinimum":false
                }
            },
            "PageSize":{
                "name":"pageSize",
                "in":"query",
                "description":"Quantidade de itens por página",
                "required":false,
                "schema":{
                    "type":"integer",
                    "format":"int32",
                    "default":20
                } 
            }
        },
        "schemas":{
            "PagedSellers":{
                "type":"object",
                "allOf":[
                    {
                        "$ref":"#/components/schemas/Paging"
                    },
                    {
                        "$ref":"#/components/schemas/Sellers"
                    }
                ]
            },
            "Sellers":{
                "type":"object",
                "properties":{
                    "items":{
                        "type":"array",
                        "items":{
                            "$ref":"#/components/schemas/SellerInfo"
                        }
                    }
                }
            },
            "SellerInfo":{
                "type":"object",
                "properties":{
                    "companyId":{
                        "type":"string",
                        "description":"Empresa",
                        "x-totvs":{
                            "rm":{
                                "field":"TVEN.CODCOLIGADA",
                                "required":true,
                                "type":"integer",
                                "lenght":"2",
                                "available":true
                            }
                        }
                    },
                    "branchID":{
                        "type":"string",
                        "description":"Filial",
                        "x-totvs":{
                            "rm":{
                                "field":"TVEN.CODFILIAL",
                                "required":true,
                                "type":"integer",
                                "lenght":"2",
                                "available":true
                            },
                            "protheus":{
                                "field":"SA3.A3_FILIAL",
                                "required":true,
                                "type":"varchar",
                                "lenght":"8",
                                "available":true,
                                "canUpdate":false
                            }
                        }
                    },
                    "sellerId":{
                        "type":"string",
                        "description":"Código do vendedor",
                        "maxLength":16,
                        "x-totvs":{
                            "rm":{
                                "field":"TVEN.CODVEN",
                                "description":"Código do vendedor",
                                "required":true,
                                "type":"varchar",
                                "lenght":"16",
                                "available":true
                            },
                            "protheus":{
                                "field":"SA3.A3_COD",
                                "description":"Código",
                                "required":true,
                                "type":"varchar",
                                "lenght":"6",
                                "available":true,
                                "canUpdate":false
                            }
                        }
                    },
                    "sellerInternalId":{
                        "type":"string",
                        "description":"InternalId do vendedor no ERP",
                        "x-totvs":{
                            "rm":{
                                "note":"O internalID do Vendedor é formado por TVEN.CODCOLIGADA|TVEN.CODVEN",
                                "type":"varchar"
                            },
                            "protheus":{
                                "note":"O internalID do Vendedor é formado por SA3.A3_FILIAL|SA3.A3_COD",
                                "type":"varchar"
                            }
                        }
                    },
                    "name":{
                        "type":"string",
                        "description":"Nome do vendedor",
                        "maxLength":80,
                        "x-totvs":{
                            "rm":{
                                "field":"TVEN.NOME",
                                "description":"Nome do vendedor",
                                "required":true,
                                "type":"varchar",
                                "lenght":"80",
                                "available":true
                            },
                            "protheus":{
                                "field":"SA3.A3_NOME",
                                "required":true,
                                "type":"varchar",
                                "lenght":"40",
                                "available":true,
                                "canUpdate":true
                            }
                        } 
                    },
                    "shortName":{
                        "type":"string",
                        "description":"login do vendedor",
                        "maxLength":25,
                        "x-totvs":{
                            "rm":{
                                "field":"TVEN.NOME",
                                "description":"O RM considera os primeiros 25 caracteres do campo Nome do Vendedor",
                                "required":false,
                                "type":"varchar",
                                "lenght":"80",
                                "available":true
                            },
                            "protheus":{
                                "field":"SA3.A3_NREDUZ",
                                "required":false,
                                "type":"varchar",
                                "lenght":"25",
                                "available":true,
                                "canUpdate":true
                            }
                        } 
                    },
                    "personalIdentification":{
                        "type":"string",
                        "description":"CPF do vendedor",
                        "maxLength":25,
                        "x-totvs":{
                            "protheus":{
                                "field":"SA3.A3_CGC",
                                "required":false,
                                "type":"varchar",
                                "lenght":"14",
                                "available":true,
                                "canUpdate":true
                            }
                        } 
                    },
                    "sellerPassWord":{
                        "type":"string",
                        "description":"Senha do vendedor",
                        "maxLength":6,
                        "x-totvs":{
                            "protheus":{
                                "field":"SA3.A3_SENHA",
                                "description":"Senha do Vendedor no Portal do Vendedor",
                                "required":false,
                                "type":"varchar",
                                "lenght":"6",
                                "available":true,
                                "canUpdate":true
                            }
                        } 
                    },
                    "sellerPhoneDiallingCode":{
                        "type":"string",
                        "description":"DDD do vendedor",
                        "maxLength":3,
                        "x-totvs":{
                            "protheus":{
                                "field":"SA3.A3_DDTEL",
                                "required":false,
                                "type":"varchar",
                                "lenght":"3",
                                "available":true,
                                "canUpdate":true
                            }
                        } 
                    },
                    "sellerPhone":{
                        "type":"string",
                        "description":"Telefone do vendedor",
                        "maxLength":15,
                        "x-totvs":{
                            "protheus":{
                                "field":"SA3.A3_TEL",
                                "required":false,
                                "type":"varchar",
                                "lenght":"15",
                                "available":true,
                                "canUpdate":true
                            }
                        }  
                    },
                    "sellerEmail":{
                        "type":"string",
                        "description":"E-mail do vendedor",
                        "maxLength":80,
                        "x-totvs":{
                            "protheus":{
                                "field":"SA3.A3_EMAIL",
                                "required":false,
                                "type":"varchar",
                                "lenght":"80",
                                "available":true,
                                "canUpdate":true
                            }
                        }  
                    },
                    "sellerAddress":{
                        "type":"object",
                        "description":"Endereços do vendedor",
                        "properties":{
                            "items":{
                                "type":"array",
                                "items":{
                                    "$ref":"https://raw.githubusercontent.com/renatocunha/Apis/master/Apis/Address/address_2_000.json#/components/schemas/AddressInfo"
                               }    
                            } 
                        } 
                    },
                    "salesChargeInformation":{
                        "type":"object",
                        "description":"Informações de comissões", 
                        "properties":{
                            "sellerCustomerVendorId":{
                                "type":"string",
                                "description":"Código de fornecedor do vendedor para processamento de comissões",
                                "x-totvs":{
                                    "protheus":{
                                        "field":"SA3.A3_FORNECE",
                                        "required":false,
                                        "note":"required true quando integração com Newhotel",
                                        "description":"SA2.A2_FILIAL|SA2.A2_COD|SA2.A2_LOJA",
                                        "type":"varchar",
                                        "lenght":"50"
                                    }
                                }        
                            },
                            "salesChargeInterface":{
                                "type":"string",
                                "description":"Formato de cobrança de comissões",
                                "x-totvs":{
                                    "protheus":{
                                        "field":"SA3.A3_GERASE2",
                                        "required":false,
                                        "type":"varchar",
                                        "lenght":"1",
                                        "example":"S=Contas a Pagar;F=Folha de Pagamento;N=Sem Interface"
                                    }
                                }
                            },
                            "indirectSeller":{
                                "type":"string",
                                "description":"Código do vendedor indireto",
                                "x-totvs":{
                                    "datasul":{
                                        "description":"Código do Representante Indireto",
                                        "field":"repres_financ.cdn_repres_indir",
                                        "required":false,
                                        "type":"integer",
                                        "lenght":"5"
                                    }
                                }
                            } 
                        }
                    },
                    "sellerStatus":{
                        "type":"boolean",
                        "description":"Vendedor ativo?",
                        "example":true
                    },
                    "representativeType":{
                        "type":"string",
                        "description":"Tipo de representate",
                        "x-totvs":{
                            "protheus":{
                                "field":"SA3.A3_TIPO",
                                "required":false,
                                "type":"varchar",
                                "lenght":"1",
                                "enum":[
                                    "I=Interno;E=Externo;P=Parceiro"
                                ]
                            }
                        } 
                    }
                }
            },
            "Paging":{
                "type":"object",
                "properties":{
                    "hasNext":{
                        "type":"boolean",
                        "example":false
                    }
                }
            },
            "ErrorDetails":{
                "type":"object",
                "allOf":[
                    {
                        "$ref":"#/components/schemas/ErrorModel" 
                    },
                    {
                        "$ref":"#/components/schemas/ErrorDetail" 
                    }
                ]
            },
            "ErrorModel":{
                "type":"object",
                "required":[
                    "code",
                    "message",
                    "detailedMessage"
                ],
                "properties":{
                    "code":{
                        "type":"string",
                        "description":"Código identificador do erro."
                    },
                    "message":{
                        "type":"string",
                        "description":"Literal no idioma da requisição descrevendo o erro para o usuário."
                    },
                    "detailedMessage":{
                        "type":"string",
                        "format":"uri",
                        "description":"Mensagem técnica e mais detalhada do erro."
                    },
                    "helpUrl":{
                        "type":"string",
                        "format":"uri",
                        "description":"URI para documentação do erro."
                    }
                }
            },
            "ErrorDetail":{
                "type":"object",
                "properties":{
                    "details":{
                        "type":"array",
                        "items":{
                            "$ref":"#/components/schemas/ErrorModel"   
                        }
                    }
                }
            }
        }
    }
}